{% extends "layouts/base.njk" %} {% block body %}

<!-- GDPR -->
<section class="py-32 plc2 prc2">
  <div class="container m-auto">
    <div class="max-w-[75ch] text-lg">
      {% if contentOne.heading %}
      <h2 class="text-3xl font-semibold mb-4">
        {{ contentOne.heading }}
      </h2>
      {% endif -%} {% for item in contentOne.items %}
      <div class="mb-6">
        {% if item.heading %}
        <h3 class="text-2xl font-semibold mb-4">
          {{ item.heading }}
        </h3>
        {% endif -%} {%- if item.text %}
        <p class="text-base mb-2">
          {{ item.text | markdown | safe }}
        </p>
        {% endif -%} {%- if item.subitems %}
        <ul class="list-disc text-base max-w-2xl space-y-1 ml-8">
          {% for subitem in item.subitems %}
          <li>
            {{ subitem.text | markdown | safe }}
          </li>
          {% endfor %}
        </ul>
        {% endif %}
      </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endblock body %}
