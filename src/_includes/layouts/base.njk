<!-- A fully fleshed-out <head>, dynamically changing based on client.json and the page front matter -->

<!DOCTYPE html>
<html lang="cs" class="scroll-smooth">
  <head>
    <!-- Standard meta tags -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="{{ client.description }}" />
    <meta name="generator" content="{{ eleventy.generator }}" />
    <link rel="canonical" href="{{ client.domain }}{{ page.url }}" />

    <!-- Social Media Display -->
    <meta property="og:title" content="{{ title }}" />
    <meta property="og:description" content="{{ description }}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ client.domain }}{{ page.url }}" />
    <meta property="og:image" content="{{ image or "/assets/images/og-logo.png"







    }}"/> <meta property="og:image:secure_url" content="{{ image or "/assets/images/og-logo.png"







    }}"/>
    <meta property="og:locale" content="cs_CZ" />

    <!-- ================== FAVICON ================== -->
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/assets/favicons/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/assets/favicons/favicon-16x16.png"
    />
    <link rel="icon" href="/assets/favicons/favicon.ico" />

    <!-- ================== APPLE (iOS) ================== -->
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/assets/favicons/apple-icon-180x180.png"
    />
    <meta name="apple-mobile-web-app-title" content="Název webu" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />

    <!-- ================== ANDROID / PWA ================== -->
    <link rel="manifest" href="/assets/favicons/manifest.json" />
    <meta name="theme-color" content="#ffffff" />

    <!-- ================== WINDOWS ================== -->
    <meta name="msapplication-TileColor" content="#ffffff" />
    <meta
      name="msapplication-config"
      content="/assets/favicons/browserconfig.xml"
    />
    <meta
      name="msapplication-TileImage"
      content="/assets/favicons/ms-icon-144x144.png"
    />

    <!-- Preloads -->
    <link rel="preload" as="image" href="/assets/svgs/Padreza_logo.svg" />

    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href="/assets/fonts/TitilliumWeb-Light.woff2"
      crossorigin
    />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href="/assets/fonts/TitilliumWeb-Regular.woff2"
      crossorigin
    />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href="/assets/fonts/TitilliumWeb-SemiBold.woff2"
      crossorigin
    />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href="/assets/fonts/TitilliumWeb-Bold.woff2"
      crossorigin
    />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href="/assets/fonts/TitilliumWeb-Black.woff2"
      crossorigin
    />

    <!-- Sitewide Stylesheets and Scripts -->
    <link rel="stylesheet" href="/assets/css/main.css" />
    <script defer src="/assets/js/cards.js"></script>
    <script defer src="/assets/js/form.js"></script>

    {% block head %}{% endblock %}

    <title>{% if title %}{{ title }} | {% endif %}{{ client.name }}</title>
  </head>

  <body
    class="group/body{% if page.url == '/' %} home{% else %} interior{% endif %}"
  >
    <!-- Screen reader skip main nav -->
    <a
      class="sr-only"
      aria-label="Kliknutím přeskočíte na hlavní obsah"
      href="#main"
      >Kliknutím přeskočíte na hlavní obsah</a
    >

    {% include "sections/header.njk" %}
    <main id="main" class="bg-background text-primary text-lg">
      {% block body %}{% endblock %}
    </main>
    {% include "sections/footer.njk" %} {% block javascript %}{% endblock %}
  </body>
</html>
